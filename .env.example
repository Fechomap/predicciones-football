# API-Football Configuration
RAPIDAPI_KEY=your_rapidapi_key_here
RAPIDAPI_HOST=api-football-v1.p.rapidapi.com

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id_or_channel

# Environment (development or production)
ENVIRONMENT=development

# PostgreSQL Database
# Opción 1: Para desarrollo local
DATABASE_URL_LOCAL=postgresql://localhost:5432/football_betting

# Opción 2: Para Railway (opcional, Railway configura esto automáticamente)
DATABASE_URL_PRODUCTION=postgresql://user:password@host:port/database

# Active Database URL
# En local: se configura automáticamente según ENVIRONMENT
# En Railway: usa ${{Postgres.DATABASE_URL}}
DATABASE_URL=postgresql://localhost:5432/football_betting

# Bot Configuration
ALERT_TIME_MINUTES=60
MINIMUM_EDGE=0.05
CHECK_INTERVAL=30
ENABLED_LEAGUES=262,39,140
MIN_CONFIDENCE=3
MAX_ALERTS_PER_DAY=10

# Railway Configuration
PORT=8000

# Logging
LOG_LEVEL=INFO
